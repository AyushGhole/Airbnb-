<% layout("/layouts/boilerplate.ejs") %>


  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>SignUp on Wonderlust</h2>
      <hr>
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <!-- Title Field  -->
        <div class="mb-3">
          <label for="username" class="form-label">Username :</label>
          <input name="username" id="username " placeholder="ayush_ghole" type="text" required class="form-control" />
          <div class="valid-feedback">Looks good</div>
        </div>
        <br>

        <!-- Email Field -->
        <div class="mb-3">
          <label for="email" class="form-label">Email : </label>
          <input name="email" id="email" placeholder="abc@gmail.com" type="email" class="form-control" required />
        </div>
        <br>
        <!-- Passsword Field -->
        <div class="mb-3">
          <label for="password" class="form-label">Password : </label>
          <input name="password" id="password" placeholder="abc@123" type="password" class="form-control" required />
        </div>
        <br>
        <button class="btn btn-success mb-2">Signup</button>
      </form>
    </div>
  </div>