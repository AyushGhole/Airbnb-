<% layout("/layouts/boilerplate.ejs") %>

  <!-- Add this to your boilerplate layout <head> section if not already included -->
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/> -->

  <body class="bg-light ">
    <div class="container">
      <!-- Animated Heading -->
      <h3 class="text-center mb-5 fw-bold text-dark mt-4 animate__animated animate__fadeInDown">Create New Listing</h3>

      <div class="row justify-content-center">
        <!-- Animated Form Container -->
        <div class="col-lg-8 shadow p-5 bg-white rounded-4 animate__animated animate__fadeInUp">

          <form method="POST" action="/listing" class="needs-validation" enctype="multipart/form-data" novalidate>

            <!-- Title Field -->
            <div class="mb-4">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input name="title" placeholder="Add a catchy title" type="text"
                class="form-control form-control-lg shadow-sm border border-secondary-subtle" required />
            </div>

            <!-- Description Field -->
            <div class="mb-4">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea name="description" placeholder="Enter the description"
                class="form-control form-control-lg shadow-sm border border-secondary-subtle" rows="4"></textarea>
            </div>

            <!-- Image Upload -->
            <div class="mb-4">
              <label for="image" class="form-label fw-semibold">Upload Image File</label>
              <input name="image" type="file"
                class="form-control form-control-lg shadow-sm border border-secondary-subtle" required />
            </div>

            <!-- Price and Country Fields -->
            <div class="row">
              <div class="col-md-4 mb-4">
                <label for="price" class="form-label fw-semibold">Price</label>
                <input name="price" placeholder="1200" type="number"
                  class="form-control form-control-lg shadow-sm border border-secondary-subtle" required />
              </div>
              <div class="col-md-8 mb-4">
                <label for="country" class="form-label fw-semibold">Country</label>
                <input name="country" placeholder="India" type="text"
                  class="form-control form-control-lg shadow-sm border border-secondary-subtle" required />
              </div>
            </div>

            <!-- Location Field -->
            <div class="mb-4">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input name="location" placeholder="Udaipur, Mumbai" type="text"
                class="form-control form-control-lg shadow-sm border border-secondary-subtle" required />
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm">ADD</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </body>