<% layout("/layouts/boilerplate.ejs") %>

  <body>
    <h3 class="CreateForm create_head">Edit Listing</h3>
    <form method="POST" action="/listing/<%= listing._id %>?_method=PUT" class="EditForm" enctype="multipart/form-data">
      <div class="row">
        <div class="col-7 offset-2">
          <!-- Title Edit Field  -->
          <div>
            <label for="title" class="form-label">Title :</label>
            <input name="title" value="<%= listing.title %>" type="text" required class="form-control" />
            <br>
          </div>
          <!-- Description Edit field -->
          <div>
            <label for="description" class="form-label">Description : </label>
            <textarea name="description" class="form-control"><%= listing.description %></textarea>
            <br>

          </div> 

          <!-- Image preview --> 
           <div class="mb-3">
              Original Image : <br>
              <img src="<%= listing.image.url %>" alt="uploaded_image" class="preview_img"> 
           </div>


          <!-- Image Edit field -->
            <div>
            <label for="image" class="form-label">Upload Image File : </label>
            <input name="image" type="file" class="form-control" required />
          </div>
          <br>

          <div class="row">
            <!-- Price edit field -->
            <div class="col-md-4">
              <label for="price" class="form-label"> Price : </label>
              <input name="price" value="<%= listing.price %>" type="number" required class="form-control" required />
            </div>
            <br>
            <!-- Country Edit field -->
            <div class="col-md-8">
              <label for="country" class="form-label"> Country : </label>
              <input name="country" value="<%= listing.country %>" type="text" class="form-control" required />
            </div>
            <br>
          </div>




          <!-- location edit field -->
          <div>
            <label for="location" class="form-label">Location :</label>
            <input name="location" value="<%= listing.location %>" type="text" class="form-control " />
            <br>
          </div>


          <!-- Edit button -->
          <button class="btn btn-danger">Edit</button>
    </form>
    </div>
    </div>
  </body>