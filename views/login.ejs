<% layout("/layouts/boilerplate.ejs") %>


  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Login</h2>
      <hr>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <!-- Title Field  -->
        <div class="mb-3">
          <label for="username" class="form-label">Username :</label>
          <input name="username" id="username " placeholder="ayush_ghole" type="text" required class="form-control" />

        </div>
        <br>

        <!-- Passsword Field -->
        <div class="mb-3">
          <label for="password" class="form-label">Password : </label>
          <input name="password" id="password" placeholder="abc@123" type="password" class="form-control" required />
        </div>
        <br>
        <button class="btn btn-success mb-2">login</button>
      </form>
    </div>
  </div>